<label class="bl-radio-wrapper {{class}}">
    <span class="bl-radio ">
        <input type="radio" id="{{id}}" name="{{name}}" class="bl-radio-input" 
        {{#if disabled}}
          disabled
        {{/if}} value="on" {{checked}}>
        <span class="bl-radio-inner"></span>
    </span><span>{{{text}}}</span>
</label>